<Window x:Class="LigerShark.Templates.DownloadZipWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select your template from http://html5up.net" Height="662.686" Width="1200">
    <Grid Margin="0,0,0,15" Height="754" VerticalAlignment="Bottom">
        <WebBrowser Name="CtrlBrowser" Navigating="OnNavigating" Source="http://html5up.net/" Margin="0,182,0,61"/>
        <Label Content="Click on the Download link for desired template or enter a URL to a .zip file" Margin="10,146,10,0" VerticalAlignment="Top" RenderTransformOrigin="-1.965,0.354" FontSize="16" FontWeight="Bold"/>
        <Label Content="Zip URL to download" HorizontalAlignment="Left" Margin="7,712,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5"/>
        <TextBox Name="CtrlTextUrl" Height="23" Margin="164,712,207,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button Name="ButtonDownload" Content="Download" HorizontalAlignment="Left" Margin="1024,712,0,0" VerticalAlignment="Top" Width="75" Click="ButtonDownload_Click"/>

    </Grid>
</Window>
